<div class="devise-contents">
  <h2 class="devise-headline">パスワードを忘れた方</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="devise-field">
      <%= f.label :email, class:"devise-field__headline" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"devise-field__input" %>
    </div>

    <div class="actions">
      <%= f.submit "SEND", class:"devise-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>