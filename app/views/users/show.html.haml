.mypage
  .user__posts
    %p.list-title 
      = "#{@nickname}さんの投稿一覧"
      - @posts.each do |post|
        .user__post
          = link_to "", post_path(post.id)
          .user__post__image
            = image_tag post.image.url(:thumb), class: 'show__image--top'
          .user__post__info
            .user__post__info--user
              .user__userimage
                = image_tag post.user.image.url(:thumb100), class: "show__image--user"
              .user__user-status
                .user__nickname
                  = post.user.nickname
            .user__post__info--title
              = post.title
            .user__post__info--status
              .user__post-category 
                = "カテゴリ：#{post.category.name}"
              -#.user__post-erea 北米>アメリカ>シカゴ
            .user__post__info--tags
            .user__post__info--time
              %p.create-time
                = post.created_at.to_s(:datetime_jp)
  .profile
    .profile__user
      .profile__user--image
        = image_tag @image.url(:thumb200), class: "show__image--user"
      .profile__user--status
        %p.user-info__nickname
          = link_to "#{@nickname}", "/users/#{@user.id}"
    %ul.user-connection
      %li.user-connection__list
        %p.user-connection__list--follow フォロー
        = link_to "2", "#"
      %li.user-connection__list
        %p.user-connection__list--followers フォロワー
        = link_to "1", "#"
      %li.user-connection__list
        %p.user-connection__list--favorite お気に入り
        = link_to "7", "#"
    .profile__biography
      = simple_format @user.biography