.mypage
  .user__posts
    %p.list-title 
      = "#{current_user.nickname}さんの投稿一覧"
      - @posts.each do |post|
        .user__post
          = link_to "", post_path(post.id)
          .user__post__image
            = image_tag post.image.url(:thumb), class: 'show__image--top'
          .user__post__info
            .user__post__info--user
              .user__userimage
              .user__user-status
                .user__nickname
                  = post.user.nickname
            .user__post__info--title
              = post.title
            .user__post__info--status
              .user__post-category 
                = "カテゴリ：#{post.category.name}"
              -#.user__post-erea 北米>アメリカ>シカゴ
            .user__post__info--tags
            .user__post__info--time
              %p.create-time
                = post.created_at.to_s(:datetime_jp)
  = render partial: 'posts/profile'